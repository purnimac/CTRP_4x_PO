                <version>${nci-commons.version}</version>
                <configuration>
                    <srcDirectories>
                        <param>${pom.basedir}/../web/src/main/webapp</param>
                    </srcDirectories>
                    <deployDirectory>${jboss.home}/standalone/tmp/vfs/deployment</deployDirectory>
                    <deployDirectoryPattern>deployment.+</deployDirectoryPattern>
                    <deploySubDirectory>po-web.war-.*</deploySubDirectory>
                    <deployedArtifact>${deployedArtifact}</deployedArtifact>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jax-ws-commons</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>wsimport-from-jdk</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>      
                    <target>2.1</target>              
                    <wsdlDirectory>${basedir}/../webservices/src/main/resources</wsdlDirectory>                    
                    <wsdlFiles>
                        <wsdlFile>PersonService.wsdl</wsdlFile>
                        <wsdlFile>OrganizationService.wsdl</wsdlFile>
                        <wsdlFile>FamilyService.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/ClinicalResearchStaff.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/Person.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/Organization.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/HealthCareFacility.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/HealthCareProvider.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/IdentifiedOrganization.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/IdentifiedPerson.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/OrganizationalContact.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/OversightCommittee.wsdl</wsdlFile>
                        <wsdlFile>gov/nih/nci/po/webservices/bridg/ResearchOrganization.wsdl</wsdlFile>
                    </wsdlFiles>
                    <xjcArgs>
	                    <xjcArg>-Xannotate</xjcArg>
	                </xjcArgs>               
                    <keep>true</keep><!-- Keep generated files -->                    
                    <sourceDestDir>${project.build.directory}/generated-sources</sourceDestDir> <!-- generated source files destination -->                    
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics</artifactId>
                        <version>0.6.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-basics-annotate</artifactId>
                        <version>0.6.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.codehaus.jackson</groupId>
                        <artifactId>jackson-core-asl</artifactId>
                        <version>${jackson.version}</version>
                        <scope>compile</scope>
                    </dependency>
                </dependencies>
            </plugin>
             <!-- adding generated source directory to the project-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
				<version>1.10</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
                <executions>
                    <execution>
                        <id>compile-generated-source</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

