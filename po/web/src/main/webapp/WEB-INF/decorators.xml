<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/jsp/decorators">
    <excludes>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/help/*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/ajax/*</pattern>
        <pattern>/*/ajax/*</pattern>
        <pattern>*/contactable/*</pattern>
        <pattern>*/alias/*</pattern>
        <pattern>*/mailable/*</pattern>
        <pattern>/login/login.action*</pattern>
    </excludes>
    
    <decorator name="popup" page="popup.jsp">
        <pattern>/*/popup/*</pattern>
        <pattern>/popup/*</pattern>
        <pattern>/*/selector/*</pattern>
    </decorator>
    
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>