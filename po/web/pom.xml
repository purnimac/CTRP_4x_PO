    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <version>${cargo-maven2-plugin.version}</version>
                <configuration>                   
                         <skip>true</skip>
                </configuration>
            </plugin>        
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>${maven-war-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>war</goal>
                        </goals>
                        <configuration>
                        <packagingExcludes>WEB-INF/lib/ant-1.7.0.jar,WEB-INF/lib/ant-launcher-1.7.0.jar,WEB-INF/lib/commons-lang3-3.1.jar</packagingExcludes>
                            <webResources>
                                <resource>
                                    <directory>
                                        ${basedir}/src/main/webResources
                                    </directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>../services/src/main/db</directory>                                    
                                    <targetPath>WEB-INF/classes/db</targetPath>
                                    <filtering>true</filtering>                                    
					            </resource>
                            </webResources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${cobertura-maven-plugin.version}</version>
                <configuration>
                    <instrumentation>
                        <excludes>
                            <exclude>gov/nih/nci/po/web/session/PoOpenSessionInViewFilter.class</exclude>
                            <exclude>gov/nih/nci/po/web/util/MockTextMessage.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <configuration>
                    <excludes>
                        <!-- CPD violations -->
                        <exclude>**/SearchOrganizationAction.java</exclude>
                        <exclude>**/SearchPersonAction.java</exclude>      
                        <exclude>**/ResearchOrganizationAction.java</exclude>                                          
                        <exclude>**/HealthCareFacilityAction.java</exclude>
                        <exclude>**/OversightCommitteeAction.java</exclude>
                    </excludes>                    
                    <minimumTokens>125</minimumTokens>
                </configuration>
                <version>${maven-pmd-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                            <goal>cpd-check</goal>
                        </goals>
                        <phase>process-test-classes</phase>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>gov.nih.nci.coppa</groupId>
                        <artifactId>nci-commons-ctrp-core</artifactId>
                        <version>${nci-commons.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude />
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>
</project>
