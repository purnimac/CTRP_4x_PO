    <artifactId>po-web</artifactId>
    <packaging>war</packaging>
    <name>po-web</name>
    <url>../../web/target/site</url>

    <properties>
        <showErrorStackTraces>true</showErrorStackTraces>
        <defaultPageSize>20</defaultPageSize>        
        <struts.devMode>false</struts.devMode>
        <test.jdbc.url>jdbc:hsqldb:mem:po-test</test.jdbc.url>
        <test.jdbc.username>sa</test.jdbc.username>
        <test.jdbc.password />
        <test.jdbc.driverClassName>org.hsqldb.jdbcDriver</test.jdbc.driverClassName>
        <test.hibernate.dialect>org.hibernate.dialect.HSQLDialect</test.hibernate.dialect>
        
        <db-upgrade.run.dir>/db/db-upgrade</db-upgrade.run.dir>
        <db-install.run.dir>/db/db-install</db-install.run.dir>
        <csm.users.file>csmTestUsers.sql</csm.users.file>
        <org.bootstrap.file>bootstrapData.sql</org.bootstrap.file>
    </properties>

