<security-config>
    <upt-context-name>
        csmupt
    </upt-context-name>
    <application-list>
        <!-- For every application using the security api an entry should be made here -->
        <application>
            <context-name>
                @cgmm.application.name@
            </context-name>
            <authentication>
                <authentication-provider-class/>
				<lockout-time>
					60000
				</lockout-time>
				<allowed-login-time>
					60000
				</allowed-login-time>
				<allowed-attempts>
					3
				</allowed-attempts>
				
            </authentication>
            <authorization>
                <authorization-provider-class/>
                <hibernate-config-file>
                    <!-- Fully qualified file path -->
		    @jboss.home@/server/@jboss.server.name@/cgmm_config/cgmmweb.hibernate.cfg.xml
                </hibernate-config-file>
            </authorization>
        </application>
    </application-list>
    <backwards-compatibility>
        <login-application-context-name>dummyValue</login-application-context-name>
        <central-upt-configuration>dummyValue</central-upt-configuration>
        <upt-application-list>
            <upt-application>
                <context-name>dummyValue</context-name>
                <url-context-name>dummyValue</url-context-name>
                <authorization>
	                <authorization-provider-class/>
	                <hibernate-config-file>
	                    dummyValue
	                </hibernate-config-file>
                </authorization>
            </upt-application>
        </upt-application-list>
    </backwards-compatibility>
</security-config>
